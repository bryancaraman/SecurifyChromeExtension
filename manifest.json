{
    "name": "Securify",
    "version": "1.0.0",
    "description": "Secure emails",
    "manifest_version": 3,
    "author": "Securify.inc",
    "action":{
        "default_popup": "index.html",
        "default_title": "Secure your information"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["http://localhost:3000/*"],
    "content_scripts": [
        {
          "matches": ["https://mail.google.com/*"],
          "js": ["script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "Green_Logo.png", "Logo_Neutral.png", "Logo_Suspicious", "Logo_Slight" ],
            "matches": ["https://mail.google.com/*"]
        }
   ]
}
